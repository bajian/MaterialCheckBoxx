<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0dac8"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.bajian.materialcheckbox.MaterialCheckBox
            android:id="@+id/cb"
            android:layout_gravity="center_horizontal"
            android:layout_width="30dp"
            android:layout_margin="1dp"
            android:layout_height="30dp"
            app:stroke_width="2dp"
            app:stroke_color="#242486"
            app:circle_color="#e60b21"/>
        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="同意条款"/>

    </LinearLayout>
    <com.example.bajian.materialcheckbox.MaterialCheckBox
        android:id="@+id/checkbox_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="60dp"
        android:padding="4dp"
        android:layout_height="60dp"
        app:stroke_width="4dp"
        app:stroke_color="#f7f6f7"
        app:circle_color="#9f6d6d"/>

    <com.example.bajian.materialcheckbox.MaterialCheckBox
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:stroke_width="4dp"
        app:stroke_color="#2196F3"
        app:circle_color="#1976D2"/>

    <com.example.bajian.materialcheckbox.MaterialCheckBox
        android:id="@+id/checkbox_2"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:stroke_width="4dp"
        app:stroke_color="#009688"
        app:circle_color="#4CAF50"/>
    <com.example.bajian.materialcheckbox.MaterialCheckBox
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:padding="6dp"
        android:layout_height="wrap_content"
        app:stroke_width="4dp"
        app:stroke_color="#512DA8"
        app:circle_color="#9C27B0"/>

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</LinearLayout>
